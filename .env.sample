# Bill Reminder App Environment Configuration

# Node Environment
NODE_ENV=development # Set to 'production' for production deployment

# Server Configuration
PORT=5002
APP_URL=http://localhost:5002 # Set to your production URL in production

# Database Configuration - Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# OpenAI Configuration for Image Recognition
OPENAI_API_KEY=your_openai_api_key

# Email Configuration
# Choose your email provider: 'smtp', 'sendgrid', 'mailgun', or 'ses'
EMAIL_PROVIDER=smtp

# General Email Settings
EMAIL_FROM=noreply@billreminder.app
EMAIL_FROM_NAME=Bill Reminder App
EMAIL_TRACKING_ENABLED=false # Set to 'true' to enable open tracking

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false # Set to 'true' for port 465 with SSL
EMAIL_USER=your_email_username
EMAIL_PASS=your_email_password

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun Configuration (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# Amazon SES Configuration (if EMAIL_PROVIDER=ses)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Test User Configuration
TEST_USER_ID=00000000-0000-0000-0000-000000000000
